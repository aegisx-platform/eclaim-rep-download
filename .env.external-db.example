# NHSO Revenue Intelligence - External Database Configuration
# สำหรับใช้กับ docker-compose-deploy-no-db.yml

# E-Claim Credentials
ECLAIM_USERNAME=your_eclaim_username
ECLAIM_PASSWORD=your_eclaim_password

# Database Configuration (External/Host Database)
DB_TYPE=mysql                          # mysql หรือ postgresql
DB_HOST=host.docker.internal           # ใช้สำหรับ database บน host machine
DB_PORT=3306                           # 3306 สำหรับ MySQL, 5432 สำหรับ PostgreSQL
DB_NAME=eclaim_db
DB_USER=eclaim
DB_PASSWORD=eclaim_password

# Alternative DB_HOST Options:
# DB_HOST=host.docker.internal         # Linux/Mac/Windows (แนะนำ)
# DB_HOST=172.17.0.1                   # Docker bridge gateway (Linux)
# DB_HOST=192.168.1.100                # Host IP address

# Application Settings
VERSION=latest                         # หรือระบุ version เช่น 4.0.6
WEB_PORT=5001
FLASK_ENV=production
SECRET_KEY=your-secret-key-here        # Generate: python -c "import secrets; print(secrets.token_hex(32))"
